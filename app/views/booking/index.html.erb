<% flash.each do |key, value| %>
  <div class="alert alert-<% key %>">
    <%= value %>
  </div>
<% end %>

<div class="booking-page">

  <%= form_with(model: @contact, url: booking_index_path,  data: {turbo: false}) do |form| %>
  
  <div class="label">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: "form-control" %>
  </div>

  <div class="label">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="label">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control" %>
  </div>

  <div class="submit">
    <%= form.submit 'Send Message', class: "btn" %>
  </div>

  <% end %>

</div>